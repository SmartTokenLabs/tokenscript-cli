<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE token  [
        <!ENTITY style SYSTEM "shared.css">
        <!ENTITY mint.en SYSTEM "supply.en.js">
        <!ENTITY redeem.en SYSTEM "withdraw.en.js">
        <!ENTITY enable.en SYSTEM "enable.en.js">
        ]>
<ts:token xmlns:ts="http://tokenscript.org/2020/06/tokenscript"
          xmlns:ethereum="urn:ethereum:constantinople"
          xmlns:xhtml="http://www.w3.org/1999/xhtml"
          xmlns:xml="http://www.w3.org/XML/1998/namespace"
          xsi:schemaLocation="http://tokenscript.org/2020/06/tokenscript http://tokenscript.org/2020/06/tokenscript.xsd"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="cBAT"
>
<ts:label>
    <ts:string xml:lang="en">cBAT</ts:string>
</ts:label>
<ts:contract name="cBAT" interface="erc20">
    <ts:address network="1">0x6C8c6b02E7b2BE14d4fA6022Dfd6d75921D90E4E</ts:address>
</ts:contract>
<ts:contract name="BAT" interface="erc20">
    <ts:address network="1">0x0d8775f648430679a709e98d2b0cb6250d2887ef</ts:address>
</ts:contract>
<ts:origins>
    <ts:ethereum contract="cBAT"/>
</ts:origins>
<ts:selection name="enabled" filter="allowance>0">
    <ts:label>
        <ts:string xml:lang="en">contract already enabled</ts:string>
    </ts:label>
</ts:selection>
<ts:selection name="notEnabled" filter="allowance=0">
    <ts:label>
        <ts:string xml:lang="en">contract not enabled</ts:string>
    </ts:label>
</ts:selection>
<ts:cards>
    <!-- Do not show this card if the token contract is already enabled -->
    <ts:card type="action" exclude="enabled" name="enable">
        <ts:label>
            <ts:string xml:lang="en">Enable</ts:string>
        </ts:label>
        <ts:transaction>
            <ethereum:transaction function="approve" contract="BAT" as="bool">
                <ts:data>
                    <ts:address>0x6C8c6b02E7b2BE14d4fA6022Dfd6d75921D90E4E</ts:address>
                    <ts:uint256>115792089237316195423570985008687907853269984665640564039457584007913129639935</ts:uint256>
                </ts:data>
            </ethereum:transaction>
        </ts:transaction>
        <ts:view xml:lang="en">
            <xhtml:style type="text/css">&style;</xhtml:style>
            <xhtml:script type="text/javascript">&enable.en;</xhtml:script>
        </ts:view>
    </ts:card>

    <ts:card type="action" exclude="notEnabled" name="deposit">
        <ts:label>
            <ts:string xml:lang="en">Deposit</ts:string>
        </ts:label>
        <ts:attribute name="mintAmount">
            <ts:type><ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax></ts:type>
            <ts:label>
                <ts:string xml:lang="en">Amount to supply</ts:string>
            </ts:label>
            <ts:origins>
                <!-- e18 is a hard coded multiplier.
                rationale for hardcoding: avoiding over-design  -->
                <ts:user-entry as="e18"/>
            </ts:origins>
        </ts:attribute>
        <ts:transaction>
            <ethereum:transaction function="mint" contract="cBAT" as="uint">
                <ts:data>
                    <ts:uint256 ref="mintAmount"/>
                </ts:data>
            </ethereum:transaction>
        </ts:transaction>
        <ts:view xml:lang="en">
            <xhtml:style type="text/css">&style;</xhtml:style>
            <xhtml:script type="text/javascript">&mint.en;</xhtml:script>
        </ts:view>
    </ts:card>

    <ts:card type="action" name="withdraw">
        <ts:label>
            <ts:string xml:lang="en">Withdraw</ts:string>
        </ts:label>
        <ts:attribute name="redeemAmount">
            <ts:type><ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax></ts:type>
            <ts:label>
                <ts:string xml:lang="en">Amount to withdraw</ts:string>
            </ts:label>
            <ts:origins>
                <ts:user-entry as="e8"/>
            </ts:origins>
        </ts:attribute>
        <ts:transaction>
            <ethereum:transaction function="redeem" contract="cBAT" as="uint">
                <ts:data>
                    <ts:uint256 ref="redeemAmount"/>
                </ts:data>
            </ethereum:transaction>
        </ts:transaction>
        <ts:view xml:lang="en">
            <xhtml:style type="text/css">&style;</xhtml:style>
            <xhtml:script type="text/javascript">&redeem.en;</xhtml:script>
        </ts:view>
    </ts:card>

</ts:cards>

    <ts:attribute name="allowance">
        <ts:type><ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax></ts:type>
        <ts:origins>
            <ethereum:call function="allowance" contract="BAT" as="uint">
                <ts:data>
                    <ts:address ref="ownerAddress"/>
                    <ts:address>0x6C8c6b02E7b2BE14d4fA6022Dfd6d75921D90E4E</ts:address>
                </ts:data>
            </ethereum:call>
        </ts:origins>
    </ts:attribute>

    <!-- your balance in BAT (not compound BAT) -->
    <ts:attribute name="tokenBalance">
        <ts:type><ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax></ts:type>
        <ts:label>
            <ts:string xml:lang="en">Balance</ts:string>
            <ts:string xml:lang="zh">餘額</ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call function="balanceOf" contract="BAT" as="uint">
                <ts:data>
                    <ts:address ref="ownerAddress"/>
                </ts:data>
            </ethereum:call>
        </ts:origins>
    </ts:attribute>

    <!-- BAT to cBAT exchange rate -->
    <ts:attribute name="exchangeRate">
        <ts:type><ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax></ts:type>
        <ts:label>
            <ts:string xml:lang="en">Exchange Rate</ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call function="exchangeRateCurrent" contract="cBAT" as="uint">
            </ethereum:call>
        </ts:origins>
    </ts:attribute>

    <ts:attribute name="cTokenBalance">
        <ts:type><ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax></ts:type>
        <ts:label>
            <ts:string xml:lang="en">Balance</ts:string>
            <ts:string xml:lang="zh">餘額</ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call function="balanceOf" contract="cBAT" as="uint">
                <ts:data>
                    <ts:address ref="ownerAddress"/>
                </ts:data>
            </ethereum:call>
        </ts:origins>
    </ts:attribute>

    <ts:attribute name="supplyInterestRate">
        <ts:type><ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax></ts:type>
        <ts:label>
            <ts:string xml:lang="en">Supply Interest Rate</ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call function="supplyRatePerBlock" contract="cBAT" as="uint">
            </ethereum:call>
        </ts:origins>
    </ts:attribute>

</ts:token>
